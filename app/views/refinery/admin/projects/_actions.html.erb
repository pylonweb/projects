<ul>
  <% if Refinery::Admin::ProjectsController.searchable? %>
    <li>
      <%= render :partial => "/refinery/admin/search",
                  :locals => {
                    :url => main_app.refinery_admin_projects_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), main_app.new_refinery_admin_project_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Refinery::Admin::ProjectsController.sortable? and Refinery::Project.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Projects"),
                 main_app.refinery_admin_projects_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Projects"),
                 main_app.refinery_admin_projects_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>